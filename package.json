{
  "name": "shared-components-lib-poc",
  "private": true,
  "license": "ISC",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "storybook": "npx storybook dev -p 6006",
    "build-storybook": "npx storybook build",
    "style-dictionary": "npx style-dictionary build --config ./style-dictionary/config.json",
    "prettier:write": "npx prettier . --write",
    "prettier:check": "npx prettier . --check",
    "lint": "npx eslint",
    "lint:fix": "npx eslint --fix",
    "fixcode": "yarn prettier:write && yarn prettier:check && yarn lint && yarn lint:fix",
    "lerna:build": "npx lerna run build",
    "lerna:patch": "npx lerna version patch",
    "lerna:minor": "npx lerna version minor",
    "lerna:major": "npx lerna version major",
    "lerna:publish": "npx lerna publish from-package",
    "deploy:patch": "yarn fixcode && yarn lerna:build && yarn lerna:patch -y && yarn lerna:publish -y",
    "deploy:minor": "yarn fixcode && npx lerna run test && yarn lerna:build && yarn lerna:minor -y && yarn lerna:publish -y",
    "deploy:major": "yarn fixcode && npx lerna run test && yarn lerna:build && yarn lerna:major -y && yarn lerna:publish -y"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.2",
