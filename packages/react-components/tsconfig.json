{
  "compilerOptions": {
    "jsx": "react",
    "module": "ESNext",               // Use ESNext para compatibilidade com tree shaking
    "target": "ESNext",               // Gera código moderno
    "moduleResolution": "node",       // Resolva módulos como no Node.js
    "strict": true,                   // Ativa as verificações estritas
    "esModuleInterop": true,          // Compatibilidade com CommonJS
    "skipLibCheck": true,             // Ignora verificações de bibliotecas
    "declaration": true,              // Gera os arquivos .d.ts
    "declarationMap": true,           // Gera mapas de declaração
    "outDir": "./dist",               // Diretório de saída
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "node_modules",
    "src/**/*.stories.tsx"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
}