{
  "source": [
    "./style-dictionary/tokens/**/*.json"
  ],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "dist/scss/",
      "files": [
        {
          "destination": "_variables.scss",
          "format": "scss/variables"
        }
      ]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "src/",
      "files": [
        {
          "format": "javascript/es6",
          "destination": "index.js"
        }
      ]
    }
  }
}